<Window x:Class="WpfTest.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="ToastWindow" Height="53" Width="230"
        WindowStyle ="None" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Name="textLabel" Content="正在屏幕共享" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="31" Width="189"/>
            <Button x:Name="exitBtn" Width="32" Background="Transparent" 
                                BorderThickness="0" Click="exitBtn_Click">
                <Image Height="28" Width="26" Source="Close.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
